#include <stdio.h>
#include <stdlib.h>

int main() {
    int n;

    // 1. Pobranie rozmiaru tablicy
    printf("Podaj rozmiar tablicy: ");
    scanf("%d", &n);

    // 2. Dynamiczna alokacja pamięci dla n liczb całkowitych
    int* tablica = malloc(n * sizeof(int));
    if (tablica == NULL) { // Sprawdzenie, czy alokacja pamięci się powiodła
        printf("Blad alokacji pamieci.\n");
        return 1;
    }

    // 3. Wczytanie liczb do tablicy
    printf("Podaj %d liczby calkowite:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &tablica[i]);
    }

    // 4. Wypisanie liczb większych od 10
    printf("Liczby wieksze od 10:\n");
    for (int i = 0; i < n; i++) {
        if (tablica[i] > 10) {
            printf("%d ", tablica[i]);
        }
    }
    printf("\n");

    // 5. Zwolnienie pamięci
    free(tablica);
    tablica = NULL;

    return 0;
}
