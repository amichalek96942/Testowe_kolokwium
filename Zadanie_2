#include <stdio.h>


int main() {

    int liczba_bakterii = 0;
    int godziny = 0;

    printf("Start: ");
    scanf("%d", &liczba_bakterii);
    printf("Godziny: ");
    scanf("%d", &godziny);

    for (int i = 0; i < godziny; i++) {
        liczba_bakterii = liczba_bakterii * 2;
        printf("Godzina %d: %d\n", i + 1, liczba_bakterii);
    }

    return 0;
}
